<% @trips.each do |trip| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= trip.name %></h1><br />
    <i><%= trip.location %></i><br />
    <p><%= trip.description %></p><br />

    <% if trip.user.present? %>
      <small><%= trip.user.email %></small>
    <% end %>
  </div>

  <hr />

<% end %>